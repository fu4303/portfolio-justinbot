---
layout: base.njk
---

<div class="container mx-auto px-12 md:px-48 py-12 md:py-48 min-h-screen">
  <div class="grid gap-12">
    <div class="leading-tight">
      <img src="/assets/images/avatar.jpg" class="bg-orange-300 w-64 h-64 rounded-lg shadow-md" alt="Avatar">
      <h1 class="text-6xl font-bold">Justin Carlson</h1>
      <h2 class="text-3xl font-bold">Software Engineer</h2>
    </div>

    <div>
      <h1 class="text-xl font-bold">Get in touch</h1>
      <p class="text-xl">
        Lick a digital envelope and send it to
        <a href="{{ socials.email.url }}" class="font-bold hover:text-pink-800 hover:underline focus:text-pink-800 focus:underline">{{ socials.email.label }}</a>
      </p>
    </div>

    <div class="flex gap-8">
      {% for s in[socials.github, socials.linkedin, socials.artstation] %}
        <a href="{{ s.url }}" class="hover:text-pink-800 focus:text-pink-800">
          <i class="{{ s.icon }} fa-2x"></i>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% include "footer.njk" %}
