{% from 'widgets/common.njk' import link %}
{% from 'widgets/social.njk' import social_icon %}

<footer>
  <div class="container mx-auto p-4 md:p-8 text-gray-600">
    <div class="flex gap-4 pb-4">
      {% for k, s in socials %}
        {{ social_icon(url=s.url, icon=s.icon, label=s.label) }}
      {% endfor %}
    </div>
    <p class="pb-1">
      {{ link(url=site.source_url, label='Source code') }}
      is licensed MIT
    </p>
    <p class="pb-1">
      Content is &copy; 2020 Justin Carlson
    </p>
  </div>
</footer>
