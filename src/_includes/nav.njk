{% from 'widgets/social.njk' import social_icon %}

<nav class="text-gray-600">
  <div class="container mx-auto px-4 md:px-8 py-4">
    <div class="flex items-center justify-between flex-wrap">
      <a href="/">
        <img src="/images/favicon.svg" alt="Justin Carlson" class="h-8 w-8">
      </a>
      <div class="flex gap-4">
        {% for k, s in socials %}
          {{ social_icon(url=s.url, icon=s.icon, label=s.label) }}
        {% endfor %}
      </div>
    </div>
  </div>
</nav>
